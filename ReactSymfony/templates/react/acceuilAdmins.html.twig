{% block title %}ALLZ{% endblock %}



{% block body %}
	{# templates/home.html.twig #}
	<section class="page">
		<!-- NAV BAR -->
		<section class="navbar-section">
			<nav class="navbar show-nav">
				<a class="logo" href=""><img class="image-logo" src="{{ asset('Image/ALLZlogo.png') }}"></a>
				<div class="div-nav-links">
					<ul id="ul-navbar">
