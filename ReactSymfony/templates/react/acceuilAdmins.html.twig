			<div {{ react_component('AdvancedSearchBar') }}></div>
		</section>

		<div {{ react_component('InfoAnnuaire') }}></div>


		<section class="content-section">

			<h1 id="contentTitle">Ajout ou suppression d'un membre du groupe</h1>

			<div {{ react_component('GroupCreator') }}></div>

			<div class="contentPage">
				<div {{ react_component('ListGroups') }}></div>
			</div>


			<div {{ react_component('AddMember') }}></div>

			<div {{ react_component('DeleteMember') }}></div>
		</section>

